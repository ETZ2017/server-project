<div>
    <h3 style="display: inline-block;"><a class="btn btn-secondary" href="/artist"><i class="fa fa-plus"></i>  Create New</a> Artists</h3>
    <form action="/artist/list" style="display: inline-block; float: right;" method="GET" class="">
        <div class="form-group">
            <input type="text" name="search" placeholder="Search for the artist..." class=""/>
            <input type="submit" value="Search" class="btn btn-secondary"/>
        </div>
    </form>
</div>

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Description</th>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>

    {{!-- {{#if list}}
        <h3>No match</h3>
    {{/if}} --}}

    {{#each list}}
    <tr>
        <td>{{this.name}}</td>
        <td>{{this.type}}</td>
        <td>{{this.email}}</td>
        <td>{{this.phone}}</td>
        <td>{{this.description}}</td>
        <td>
            <a href="/artist/{{this._id}}"><i class="fa fa-pencil fa-lg"></i></a>
        </td>
        <td>
            <a href="/artist/delete/{{this._id}}" onclick="confirm('Do you really want to delete this record?')"><i class="fa fa-trash fa-lg"></i></a>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>